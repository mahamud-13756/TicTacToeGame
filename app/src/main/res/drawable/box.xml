<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the box -->
    <solid android:color="#FFBB86FC" />

    <!-- Corner radius to create the curve -->
    <corners android:radius="20dp" />

    <!-- Optional padding inside the box -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

    <!-- Optional border around the box -->
    <stroke
        android:width="2dp"
        android:color="#FF6200EE" />
</shape>
